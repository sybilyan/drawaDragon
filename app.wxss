.backgroundBox{
  display:flex;
  height: 100%;/*重点，铺满全屏*/
  justify-content: center;
  align-items:center;
 }

.container{
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  left: 0;
  right: 0;
  padding-bottom: 15%;  /* 离底部高度 */
  position: relative;
}

.imgBox {
  padding-bottom: 20%;  /* 离底部高度 */
  position: relative;
  font-size: 20rpx;
  display: flex;
  align-items: center;
  flex-direction: column; /* 上下排布 */
  margin-bottom: 10px;
}
